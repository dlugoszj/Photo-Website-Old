{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",         // <- must be CommonJS
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "include": ["src"]
}
